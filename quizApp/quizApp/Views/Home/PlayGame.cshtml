
@{
    ViewData["Title"] = "PlayGame";
}

<!-- Originally pulled from bootstrap 3.3.7 based html file  -->
<h2>Inside the PlayGame.html file</h2>

<div class="three-quarter-width center-block container">
    <main class="col-md-5">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h1>Find Questions</h1>
            </div>
            <div class="panel-body">
                <form action="#" method="POST">
                    <button type="button" id="fetch-button" class="btn btn-success">Fetch Questions</button>
                    <button type="button" id="clear-button" class="btn btn-info">Clear</button>
                </form>
            </div>
        </div>
    </main>
    <aside class="col-md-7">
        <div id="vehicle-list-panel" class="panel panel-default">
            <div class="panel-heading">
                <h1>Question List</h1>
            </div>
            <div>
                <ul id="question-list" class="list-group"></ul>
            </div>
            <div>
                <textarea rows="4" class="gameTextArea" id="questionGoesHere"></textarea>
            </div>
            <div>
                <textarea rows="8" class="gameTextArea" placeholder="Enter Answer here"></textarea>
            </div>
            <div>
                <button id="showQuestion" class="stripe btn-info">Show Question</button>
            </div>

            <div>
                <button id="showAnswer" class="stripe btn-info">Show Answer</button>
            </div>
            <div id="answerArea" class="displayOff">
                <div>
                    <textarea rows="8" class="gameTextArea">Fal-La-La-La-La</textarea>
                </div>
                <div>
                    <button id="missed" class="btn btn-danger">Missed</button>
                    <button id="partial" class="btn btn-info">Partially Correct</button>
                    <button id="fully" class="btn btn-success">Fully Correct</button>
                    <button id="print" class="btn btn-success">Print</button>
                </div>
            </div>


        </div>
    </aside>
</div>


<script src="~/js/game.js"></script>

