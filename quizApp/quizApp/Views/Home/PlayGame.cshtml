@model ApplicationCore.Entities.Student

@{
    ViewData["Title"] = "PlayGame";
}

<!-- Originally pulled from bootstrap 3.3.7 based html file  -->
<div id="mainContainer" class="three-quarter-width center-block container">
    <!-- Small modal -->
    <div id="modalDiv">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bs-example-modal-sm">Small modal</button>

        <div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
            <div class="modal-dialog modal-sm" role="document">
                <div class="modal-content">
                    ...
                </div>
            </div>
        </div>
    </div>


    <main class="col-md-3">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h1>Find Questions</h1>
            </div>
            <h2>Hello @Model.FName</h2>

            <input type="hidden" asp-for="Id" />  <!-- question here -->

            <div class="panel-body">
                <form action="#" method="POST">
                    <button type="button" id="fetch-button" class="btn btn-success">Fetch Questions</button>
                    <button type="button" id="clear-button" class="btn btn-info">Clear</button>
                    <button type="button" id="start-quiz" class="btn btn-success">Start</button>
                </form>
            </div>
        </div>
    </main>
    <aside class="col-md-8">
        <div id="vehicle-list-panel" class="panel panel-default">
            <div class="panel-heading">
                <h1>Question List</h1>
            </div>
            <div>
                <ul id="question-list" class="list-group"></ul>
            </div>
            <div>
                <textarea rows="4" class="gameTextArea" id="questionGoesHere" placeholder="Question goes here."></textarea>
            </div>
            <div>
                <textarea id="enterAnswerHere" rows="5" class="gameTextArea" placeholder="Enter Answer here"></textarea>
            </div>
            <div>
                <button id="showQuestion" class="stripe btn-info">Show Question</button>
            </div>

            <div>
                <button id="toggleAnswer" class="stripe btn-info">Show Answer</button>
            </div>
            <div id="answerArea" class="displayOff">
                <div>
                    <textarea rows="5" id="specificAnswerHere" class="gameTextArea"></textarea>
                </div>
                <div>
                    <button id="missed" class="btn btn-danger">Missed</button>
                    <button id="partial" class="btn btn-info">Partially Correct</button>
                    <button id="fully" class="btn btn-success">Fully Correct</button>
                    <button id="next" class="btn btn-success">Next Question</button>
                </div>
            </div>


        </div>
    </aside>
</div>


<script src="~/js/game.js"></script>

